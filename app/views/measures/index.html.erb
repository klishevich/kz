<h1>Listing measures</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Short Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @measures.each do |t| %>
  <tr>
    <td><%= t.code %></td>
    <td><%= t.name %></td>
    <td><%= t.short_name %></td>
    <td><%= link_to 'Show', t %></td>
    <td><%= link_to 'Edit', edit_measure_path(t) %></td>
    <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

